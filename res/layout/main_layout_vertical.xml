<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/myshape"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/noconn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initruns"
        android:textColor="#ffcc4343"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/switches0"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lightscenes"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switches0"
        android:layout_marginLeft="8dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/values0"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lightscenes"
        android:layout_marginLeft="8dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/switches1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ListView
        android:id="@+id/switches2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ListView
        android:id="@+id/values1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ListView
        android:id="@+id/values2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>