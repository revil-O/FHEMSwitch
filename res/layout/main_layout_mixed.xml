<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/myshape"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/noconn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="@string/initruns"
        android:textColor="#ffcc4343"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ListView
        android:id="@+id/mixed00"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/mixed01"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/mixed00"
        android:visibility="gone" />

    <ListView
        android:id="@+id/mixed10"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/mixed00"
        android:visibility="gone" />

    <ListView
        android:id="@+id/mixed11"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/mixed10"
        android:layout_toRightOf="@id/mixed00"
        android:visibility="gone" />

    <ListView
        android:id="@+id/mixed12"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/mixed11"
        android:layout_toRightOf="@id/mixed00"
        android:visibility="gone" />

</RelativeLayout>